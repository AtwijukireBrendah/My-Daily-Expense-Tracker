        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#F32718"/>
    <lecho.lib.hellocharts.view.PieChartView
        android:layout_width="match_parent"
        android:id="@+id/chart"
        android:layout_height="match_parent" />

</LinearLayout>